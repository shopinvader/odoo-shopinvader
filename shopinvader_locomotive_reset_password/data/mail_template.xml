<odoo noupdate="1">

    <record id="email_template_shopinvader_reset_password" model="mail.template">
            <field name="name">Shopinvader - Reset Password</field>
            <field name="email_from">${(user.email or '')|safe}</field>
            <field
            name="subject"
        >Reset Password Instructions (${object.backend_id.name})</field>
            <field name="partner_to">${object.record_id.id}</field>
            <field
            name="model_id"
            ref="shopinvader_v1_base.model_shopinvader_partner"
        />
            <field name="auto_delete" eval="True" />
            <field name="report_name">${(object.name or '').replace('/','_')}</field>
            <field name="lang">${object.lang}</field>
            <field
            name="body_html"
        ><![CDATA[
                <p>Hello ${object.name},</p>
                <p>Please reset your password here: ${object.backend_id.location}/account/reset-password?auth_reset_token=${ctx['token']}</p>
            ]]></field>
    </record>

</odoo>
