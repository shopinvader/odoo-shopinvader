<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="shopinvader_backend_view_form" model="ir.ui.view">
        <field name="model">shopinvader.backend</field>
        <field name="inherit_id" ref="shopinvader.shopinvader_backend_view_form" />
        <field name="arch" type="xml">
            <group name="sale_customer" position="after">
                <group name="seller_access" string="Seller Access">
                    <field name="seller_access" />
                    <field
                        name="seller_access_group_name"
                        attrs="{'invisible': [('seller_access', '=', False)]}"
                    />
                    <field
                        name="seller_access_customer_domain"
                        widget="domain"
                        options="{'model': 'res.partner', 'in_dialog': true}"
                        attrs="{'invisible': [('seller_access', '=', False)]}"
                    />
                </group>
            </group>
        </field>
    </record>
</odoo>
