<odoo>

    <record model="ir.model.access" id="shopinvader_sale_order_line_access_view">
    <field name="name">sale order line shopinvader user access</field>
    <field name="model_id" ref="sale.model_sale_order_line" />
    <field name="group_id" ref="shopinvader_api_cart.shopinvader_cart_user_group" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_unlink" eval="1" />
  </record>


      <record model="ir.rule" id="shopinvader_user_access_own_cart_lines_rule">
    <field name="name">shopinvader user can only access lines of its own carts</field>
    <field name="model_id" ref="sale.model_sale_order_line" />
    <field name="domain_force">[
      ('order_partner_id', '=', authenticated_partner_id)
        ]
    </field>
    <field name="groups" eval="[(6, 0, [ref('shopinvader_cart_user_group')])]" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_unlink" eval="1" />
  </record>

</odoo>
