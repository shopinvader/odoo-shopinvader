<odoo>
  <record model="ir.model.access" id="cart_user_read_access">
    <field name="name">cart user read access</field>
    <field name="model_id" ref="sale.model_sale_order" />
    <field name="group_id" ref="shopinvader_api_cart.sale_cart_user_group" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_unlink" eval="0" />
  </record>

  <record model="ir.rule" id="cart_user_write_own_carts_rule">
    <field name="name">sale cart: user can only write on its own carts</field>
    <field name="model_id" ref="sale.model_sale_order" />
    <field name="domain_force">[
      ('partner_id', '=', authenticated_partner_id)
        ]
    </field>
    <field name="groups" eval="[(6, 0, [ref('sale_cart_user_group')])]" />
    <field name="perm_read" eval="0" />
    <field name="perm_create" eval="0" />
    <field name="perm_write" eval="1" />
    <field name="perm_unlink" eval="0" />
  </record>

</odoo>
