<?xml version="1.0" encoding="UTF-8" ?>
<odoo noupdate="1">
  <record id="email_new_rating_notification" model="mail.template">
    <field name="name">New rating notification</field>
    <field name="subject">New rating created</field>
    <field name="partner_to">${object.partner_id.id}</field>
    <field name="model_id" ref="rating.model_rating_rating" />
    <field name="auto_delete" eval="False" />
    <field name="lang">${object.lang_id}</field>
    <field
            name="body_html"
        ><![CDATA[ A new rating has been created! Thank you!]]></field>
  </record>
  <record id="email_rating_publisher_response_notification" model="mail.template">
    <field name="name">Publisher response notification</field>
    <field name="subject">You've got a reply to your comment</field>
    <field name="partner_to">${object.partner_id.id}</field>
    <field name="model_id" ref="rating.model_rating_rating" />
    <field name="auto_delete" eval="False" />
    <field name="lang">${object.lang_id}</field>
    <field
            name="body_html"
        ><![CDATA[ You received a response to the rating you posted ]]></field>
  </record>
</odoo>
