<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="email_beneficiary_gift_card_cron" model="ir.cron">
        <field name="name">Gift Card: Send email to beneficiary</field>
        <field name="model_id" ref="model_gift_card" />
        <field name="state">code</field>
        <field name="code">model.cron_email_to_gift_card_beneficiary()</field>
        <field name="active" eval="True" />
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>
</odoo>
