<odoo>

  <record model="ir.model.access" id="shopinvader_account_move_access_view">
    <field name="name">invoice shopinvader user access</field>
    <field name="model_id" ref="account.model_account_move" />
    <field name="group_id" ref="shopinvader_accounting_user_group" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_unlink" eval="0" />
  </record>

  <record model="ir.rule" id="shopinvader_user_access_own_accounts_rule">
    <field name="name">shopinvader user can only access its own invoices</field>
    <field name="model_id" ref="account.model_account_move" />
    <field name="domain_force">[
      ('partner_id', '=', authenticated_partner_id)
        ]
    </field>
    <field name="groups" eval="[(6, 0, [ref('shopinvader_accounting_user_group')])]" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_unlink" eval="0" />
  </record>

</odoo>
