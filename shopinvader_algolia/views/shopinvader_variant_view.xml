<odoo>

  <record model="ir.ui.view" id="shopinvader_variant_tree_view">
    <field name="name">shopinvader.variant.tree (in shopinvader_algolia)</field>
    <field name="model">shopinvader.variant</field>
    <field name="inherit_id" ref="shopinvader.shopinvader_variant_tree_view" />
    <field name="arch" type="xml">
      <field name="name" position="after">
        <field name="data_size"/>
      </field>
    </field>
  </record>

  <record model="ir.ui.view" id="shopinvader_variant_form_view">
    <field name="name">shopinvader.variant.form (in shopinvader_algolia)</field>
    <field name="model">shopinvader.variant</field>
    <field name="inherit_id" ref="shopinvader.shopinvader_variant_form_view" />
    <field name="arch" type="xml">
      <field name="date_syncronized" position="after">
        <field name="data_size" />
      </field>
    </field>
  </record>

</odoo>
