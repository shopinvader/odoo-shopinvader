<odoo>
    <record id="rating_rating_view" model="ir.ui.view">
        <field name="inherit_id" ref="rating.rating_rating_view_tree" />
        <field name="model">rating.rating</field>
        <field name="arch" type="xml">
            <xpath expr="(//field[@name='rating_text'])[1]" position="after">
                <field name="shopinvader_backend_id" />
                <field name="lang_id" />
                <field name="publisher_comment" string="Moderator comment" />
            </xpath>
        </field>
    </record>

    <record id="rating_rating_view_form" model="ir.ui.view">
        <field name="inherit_id" ref="rating.rating_rating_view_form" />
        <field name="model">rating.rating</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_internal']" position="after">
                <field name="shopinvader_backend_id" readonly="True" />
                <field name="lang_id" />
            </xpath>
            <xpath expr="//field[@name='rating_image']" position="after">
                <field name="rating_str" widget="priority" />
            </xpath>
            <xpath expr="//field[@name='publisher_comment']" position="replace">
                <field name="publisher_comment" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='create_date']" position="replace">
                <field name="publisher_comment" string="Moderator message" />
                <field name="create_date" readonly="True" />
            </xpath>
            <xpath expr="//field[@name='feedback']" position="replace">
                <field
                    name="feedback"
                    readonly="True"
                    attrs="{'invisible': [('feedback','=',False)]}"
                />
            </xpath>
        </field>
    </record>

    <record id="rating_rating_view_search" model="ir.ui.view">
        <field name="inherit_id" ref="rating.rating_rating_view_search" />
        <field name="model">rating.rating</field>
        <field name="arch" type="xml">
             <xpath expr="//filter[@name='responsible']" position="before">
                 <filter
                    string="Shopinvader backend"
                    name="shopinvader_backend"
                    context="{'group_by':'shopinvader_backend_id'}"
                />
                 <filter
                    string="Language"
                    name="language"
                    context="{'group_by':'lang_id'}"
                />
                 <filter
                    string="Model"
                    name="rating_model"
                    context="{'group_by':'res_model'}"
                />
                 <separator />
             </xpath>
        </field>
    </record>

</odoo>
