<odoo>

    <record id="shopinvader_unit_management_sale_order_rule" model="ir.rule">
        <field name="name">Shopinvader Unit Management Endpoint rule: sale order</field>
        <field name="model_id" ref="sale.model_sale_order" />
        <field
            name="groups"
            eval="[(4, ref('shopinvader_api_unit_member.shopinvader_unit_management_user_group'))]"
        />
        <field
            name="domain_force"
        >[('partner_id.unit_id.manager_ids','=',authenticated_partner_id)]</field>

    </record>

    <record id="shopinvader_unit_management_sale_order_line_rule" model="ir.rule">
        <field
            name="name"
        >Shopinvader Unit Management Endpoint rule: sale order line</field>
        <field name="model_id" ref="sale.model_sale_order_line" />
        <field
            name="groups"
            eval="[(4, ref('shopinvader_api_unit_member.shopinvader_unit_management_user_group'))]"
        />
        <field
            name="domain_force"
        >[('order_id.partner_id.unit_id.manager_ids','=',authenticated_partner_id)]</field>

    </record>

    <record id="shopinvader_unit_management_sale_order_access" model="ir.model.access">
        <field
            name="name"
        >Shopinvader Unit Management: user read/write/create sale order</field>
        <field name="model_id" ref="sale.model_sale_order" />
        <field
            name="group_id"
            ref="shopinvader_api_unit_member.shopinvader_unit_management_user_group"
        />
        <field name="perm_read" eval="True" />
        <field name="perm_write" eval="True" />
        <field name="perm_create" eval="True" />
        <field name="perm_unlink" eval="False" />
    </record>

    <record
        id="shopinvader_unit_management_sale_order_line_access"
        model="ir.model.access"
    >
        <field
            name="name"
        >Shopinvader Unit Management: user read/write/create sale order line</field>
        <field name="model_id" ref="sale.model_sale_order_line" />
        <field
            name="group_id"
            ref="shopinvader_api_unit_member.shopinvader_unit_management_user_group"
        />
        <field name="perm_read" eval="True" />
        <field name="perm_write" eval="True" />
        <field name="perm_create" eval="True" />
        <field name="perm_unlink" eval="True" />
    </record>

</odoo>
